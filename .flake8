[flake8]
# Error Codes:
#   E***/W*** =  flake8 & pycodestyle errors/warnings (style)
#   F***     =  Pyflakes errors (logic)
#   C9**     =  mccabe (code complexity)
#   ...
#   (See https://flake8.pycqa.org/en/latest/user/error-codes.html)

#-------------------------------------------------------------------------------
# Style Guide Enforcement
#-------------------------------------------------------------------------------

# Maximum line length (PEP 8 recommends 79, adjust to your preference)
max-line-length = 100

# Ignore specific errors (use with caution)
ignore =
    # E501: Line too long - Covered by max-line-length
    E501,
    # W503: Line break before binary operator (PEP8 change)
    W503,
    # E203: the Black formatter needs this to play nicely
    E203



#-------------------------------------------------------------------------------
# Code Complexity (McCabe)
#-------------------------------------------------------------------------------

# Maximum McCabe complexity score (default is 10, adjust as needed)
max-complexity = 12

#-------------------------------------------------------------------------------
# Other Settings
#-------------------------------------------------------------------------------

# Exclude directories/files (e.g., migrations, __init__.py)
exclude = 
    .git,
    __pycache__,
    migrations,
    *.egg-info,
    venv,
    .venv

# Enable docstring conventions (requires flake8-docstrings plugin)
# docstring-convention = numpy

# More options: https://flake8.pycqa.org/en/latest/user/configuration.html
